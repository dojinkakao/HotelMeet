<div class="container-fluid pt-3 bg-light d-inline-flex vh-100">
    <div class="col">
        <h1 class="text-dark">Create Reservation</h1>
      <hr>
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col-lg-3">
        <div class="text-center">
          <%= attachment_image_tag @room, :image,fallback: "no-image.png", class: "img-fluid img-thumbnail mt-4 mb-2", style: "width: 250px; z-index: 1" %>
        </div>
      </div>
      
      <div class="col-lg-5">
        <%= form_with model: @reservation do |f| %>
          <h3>新規予約</h3>
          <%= f.hidden_field :user_id, value: current_user.id %>
          <%= f.hidden_field :room_id, value: @room.id %>
          <div class="form-group">
              <%= f.label :start, "チェックイン", class: "col-lg-4 control-label" %>
              <div class="col-lg-12">
                <%= f.date_select :start, value: @reservation.start, class: "form-control" %>
              </div>
          </div>
          <div class="form-group">
              <%= f.label :end, "チェックアウト", class: "col-lg-4 control-label" %>
              <div class="col-lg-12">
                <%= f.date_select :end, value: @reservation.end, class: "form-control" %>
              </div>
          </div>
          <div class="form-group">
            <%= f.label :number_of_people, "宿泊者の人数", class: "col-lg-4 control-label" %>
              <div class="col-lg-6">
                <%= f.text_field :number_of_people, value: @reservation.number_of_people, class: "form-control" %>
              </div>
          </div>
        </div>
    </div>
    <div class="row justify-content-md-center">
        <div class="col-lg-3 mt-4">
        <div class="d-flex justify-content-between">
            <div class="col-4">
                <%= link_to "戻る",rooms_path, class:"btn btn-outline-dark btn-lg" %>
            </div>
            <div class="col-7">
                <%= f.submit '確定', class: "btn btn-secondary btn-lg" %>
            <% end %>
            </div>
        </div>
        </div>
   </div>
   </div>
</div>