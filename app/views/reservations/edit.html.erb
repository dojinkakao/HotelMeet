<div class="container-fluid py-5 h-100 bg-light">
    <h1 class="text-dark">Edit Reservation</h1>
      <hr>
    <div class="container my-5 py-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-3">
        <div class="text-center">
          <%= attachment_image_tag @reservation.room, :image,fallback: "no-image.png", class: "img-fluid img-thumbnail mt-4 mb-2", style: "width: 250px; z-index: 1" %>
        </div>
      </div>
      <div class="col-lg-5">
        <div class="col">
            <%= form_for @reservation, url: :reservation, method: :update do |f| %>
            <h3>予約編集</h3>
            <div class="form-group">
                <%= f.label :start, "チェックイン", class: "col-lg-3 control-label" %>
                <div class="col-lg-12">
                <%= f.date_select :start, class: "form-control" %>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :end, "チェックアウト", class: "col-lg-3 control-label" %>
                <div class="col-lg-12">
                <%= f.date_select :end, class: "form-control" %>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :number_of_people, "宿泊者の人数", class: "col-lg-3 control-label" %>
                <div class="col-lg-6">
                <%= f.text_field :number_of_people, class: "form-control" %>
                </div>
            </div>
        </div>
      </div>
    </div>
    <div class="row justify-content-md-center">
        <div class="col-lg-3 mt-4">
          <div class="d-flex justify-content-between">
              <div class="p-2 bd-highlight">
                  <%= link_to "戻る", reservation_path(f), class:"btn btn-outline-dark btn-lg" %>
              </div>
              <div class="p-2 bd-highlight">
                <%= link_to "削除", reservation_path, method: :delete, class:"btn btn-secondary btn-lg" %>
              </div>
              <div class="p-2 bd-highlight">
                  <%= f.submit '更新', class: "btn btn-secondary btn-lg" %>
              <% end %>
              </div>
          </div>
        </div>
      </div>
   </div>
</div>